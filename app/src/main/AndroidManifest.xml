<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pi4.vidasaude">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EspecialityActivity"
            android:label="Especialidades" />
        <activity
            android:name=".DoctorsActivity"
            android:label="Médicos" />
        <activity
            android:name=".ConsultationActivity"
            android:label="Solicitar Consulta" />
        <activity
            android:name=".FinalActivity"
            android:label="Solicitar Consulta" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UnavailableServiceActivity"
            android:label="Médicos"></activity>

        <activity android:name=".EmptyEspecialityActivity"
            android:label="Especialidades"></activity>
    </application>

</manifest>